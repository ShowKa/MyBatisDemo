<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.showka.MyBatisDemo.mapper.TodoMapper">

	<insert id="insert" useGeneratedKeys="true" keyProperty="title">
		INSERT
		INTO todo (title, details, finished) VALUES
		(#{title}, #{details},
		#{finished})
	</insert>

	<select id="select" resultMap="com.showka.MyBatisDemo.mapper.EntityMapper.todo">
		SELECT *
		FROM todo WHERE title =
		#{title}
	</select>

</mapper>